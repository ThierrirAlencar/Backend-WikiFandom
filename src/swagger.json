          }
        ],
        "responses": {
          "200": { "description": "Lista de imagens da galeria." },
          "500": { "$ref": "#/components/responses/ErroPadrao" }
        }
      },
      "post": {
        "tags": ["Galeria"],
        "summary": "Adicionar imagem à galeria",
        "description": "Adiciona uma imagem existente a uma galeria específica.",

      "/favoritos/{id}": {
  "get": {
    "tags": ["Post Favorito"],
    "summary": "Listar todos os favoritos de um usuário",
    "description": "Retorna todos os favoritos de um usuário específico, identificado pelo ID do usuário.",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID do usuário para buscar seus favoritos.",
        "schema": { "type": "string" }
      }
    ],
    "responses": {
      "200": { "description": "Lista de favoritos do usuário." },
      "404": { "description": "Favoritos não encontrados." },
      "500": { "$ref": "#/components/responses/ErroPadrao" }
    }
  }
},
  "/favoritos": {
    "post": {
      "tags": ["Post Favorito"],
      "summary": "Criar um novo favorito",
      "description": "Associa um post a um usuário, criando um novo favorito.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id_post": { "type": "string" },
                "id_usuario": { "type": "string" }
              },
              "required": ["id_post", "id_usuario"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Favorito criado com sucesso." },
        "400": { "description": "Dados inválidos ou ausentes no corpo da requisição." },
        "500": { "$ref": "#/components/responses/ErroPadrao" }
      }
    },
    "delete": {
      "tags": ["Post Favorito"],
      "summary": "Excluir um favorito",
      "description": "Remove um favorito específico de um usuário.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id_post": { "type": "string" },
                "id_usuario": { "type": "string" }
              },
              "required": ["id_post", "id_usuario"]
            }
          }
        }
      },
      "responses": {
        "204": { "description": "Favorito excluído com sucesso." },
        "404": { "description": "Favorito não encontrado." },
        "500": { "$ref": "#/components/responses/ErroPadrao" }
      }
    }
  },
  "components": {
    "responses": {
      "ErroPadrao": {
        "description": "Erro inesperado no servidor.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }  
  },    
  "components": {
    "schemas": {
      "RegistroUsuario": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string", "minLength": 6 }
        },
        "required": ["nome", "email", "senha"]
      },
      "LoginUsuario": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string", "minLength": 6 }
        },
        "required": ["email", "senha"]
      },
      "Comentario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "conteudo": {
          "type": "string",
          "example": "Este é um ótimo post!"
        },
        "id_usuario": {
          "type": "integer",
          "example": 1
        },
        "id_post": {
          "type": "integer",
          "example": 1
        }
      }
    },
    "ComentarioAtualizado": {
      "type": "object",
      "properties": {
        "conteudo": {
          "type": "string",
          "example": "Novo conteúdo do comentário."
        }
      }
    },
      "NovoComentario": {
        "type": "object",
        "properties": {
          "texto": { "type": "string" },
          "usuario_id": { "type": "integer" },
          "post_id": { "type": "integer" }
        },
        "required": ["texto", "usuario_id", "post_id"]
      },
      "NovaImagem": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "url": { "type": "string"},
          "categoria": { "type": "string" }
        },
        "required": ["url"]
      },
      "AdicionarImagemGaleria": {
        "type": "object",
        "properties": {
          "imagem_id": { "type": "string" },
          "galeria_id": { "type": "string" }
        },
        "required": ["imagem_id", "galeria_id"]
      },
      "HistoricoPesquisa": {
        "type": "object",
        "properties": {
          "usuario_id": { "type": "string" },
          "pesquisa": { "type": "string" },
          "data": { "type": "string", "format": "date-time" }
        },
        "required": ["usuario_id", "pesquisa", "data"]
      },
      "NovaNoticia": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "conteudo": { "type": "string" },
          "data_publicacao": { "type": "string", "format": "date-time" }
        },
        "required": ["titulo", "conteudo", "data_publicacao"]
      },
      "NovoPost": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "usuarioId": { "type": "string" },
          "imagemId": { "type": "string" }
        },
        "required": ["titulo", "descricao", "usuarioId", "imagemId"]
      },
      "PostFavoritos":{
        "type": "object",
        "properties": {
          "id_post": { "type": "string" },
          "id_usuario": { "type": "string" }
        },
        "required": ["id_post", "id_usuario"]
      }
    },
    "responses": {
      "ErroPadrao": {
        "description": "Erro geral do sistema."
      }
    }
  },
  "securitySchemes": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
}
